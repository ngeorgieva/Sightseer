@model Sightseer.Models.ViewModels.Users.EditUserProfiveVm
@{
    ViewBag.Title = "Edit Profile";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("EditProfile", "Users", new { username = User.Identity.Name }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-horizontal">
        <h3>Profile</h3>
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})

        <div class="form-group">
            @Html.LabelFor(vm => vm.FirstName, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(vm => vm.FirstName, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(vm => vm.FirstName, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(vm => vm.LastName, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(vm => vm.LastName, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(vm => vm.LastName, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(vm => vm.Email, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(vm => vm.Email, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(vm => vm.Email, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(vm => vm.Town, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(vm => vm.Town, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(vm => vm.Town, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(vm => vm.Country, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(vm => vm.Country, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(vm => vm.Country, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Edit"/>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
