@model Sightseer.Models.ViewModels.Admin.AdminPageVm

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Admin Panel";
}

<h2>Admin Panel</h2>

<div class="row">
    <div class="col-sm-5">
        <h3>Users</h3>
        @foreach (var user in Model.Users)
        {
            <div class="admin-user">
                @Html.DisplayFor(vm => user.Username)
                @Html.ActionLink("Delete", "DeleteUser", new { username = user.Username}, new { @class = "btn btn-lg" })
            </div>
        }
    </div>
    
    <div class="col-sm-5">
        <h3>Attractions</h3>
        @foreach (var attr in Model.Attractions)
        {
            <div class="admin-user">
                @Html.DisplayFor(vm => attr.Name)
                @Html.ActionLink("Delete", "Delete", new { id = attr.Id }, new { @class = "btn btn-lg" })
            </div>
        }
    </div>
</div>